<div class='row'>
  <h1><%= @ad.title %></h1>

  <dl class="dl-horizontal">
    <dt>Status</dt><dd><%= I18n.t @ad.status %></dd>
    <dt>O que quero aprender:</dt><dd><%= @ad.requested_knowledge  %></dd>
    <dt>O que posso ensinar:</dt><dd> <%= @ad.offered_knowledge %></dd>
    <dt>Formato:</dt><dd><%= @ad.meeting_type%><br></dd>
    <dt>Periodo:</dt><dd><%= @ad.day_period%><br></dd>
    <dt>Localizacao:</dt><dd><%= @ad.location%><br></dd>
    <dt>Quando:</dt><dd><%= @ad.avaliability%><br></dd>
  </dl>
</div>

<% if @ad.user != current_user and @current_user_proposal.nil? and @ad.active? %>
  <%= link_to 'Enviar proposta', new_ad_proposal_path(@ad), class: 'btn btn-success navbar-btn'%>
<% elsif !@current_user_proposal.nil? %>
  <h1>Dados da sua proposta:</h1>
  <dl class="dl-horizontal">
    <dt>Proposta:</dt><dd><%= @current_user_proposal.description %></dd>
    <dt>O que quero aprender: </dt><dd> <%= @current_user_proposal.requested_knowledge %></dd>
    <dt>Email:</dt><dd> <%= @current_user_proposal.email %></dd>
    <dt>Periodo do dia:</dt><dd> <%= @current_user_proposal.day_period %></dd>
    <dt>Formato:</dt><dd> <%= @current_user_proposal.meeting_type %></dd>
    </dt>
<% end %>


<% if @ad.user == current_user and @ad.active? %>
  <%= link_to 'Editar anúncio', edit_ad_path(@ad), class: 'btn btn-primary navbar-btn' %>
  <%= link_to 'Encerrar anúncio', ad_finish_path(@ad), method: :post, class: 'btn btn-danger navbar-btn' %>
  <%= link_to 'Cancelar anúncio', ad_cancel_path(@ad), method: :post, class: 'btn btn-danger navbar-btn' %>
<% end %>
